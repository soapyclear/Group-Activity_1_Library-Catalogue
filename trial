#include <iostream>
using namespace std;

int main(){
string author;
string category;
int ISBN;   
int year;
char option; 
    
    
    cout << "MENU" << endl;
    cout << "1. Add Book Information" << endl;
    cout << "2. Delete Book Information" << endl;
    cout << "3. Edit Book Information" << endl;
    cout << "4. View Book List" << endl;
    cout << "Option: ";
    cin >> option;
    
    switch (option) {
        case '1': {
        
        
        cout << "Enter book author: ";
        cin.ignore();
        getline(cin,author);

        cout << "Enter ISBN: ";
        cin >> ISBN;

        cout << "Enter Category: ";
        getline(cin,category);
        
        cout << "Year Published: ";
        cin >> year;
        
        }
        
    }

  return 0;
}
